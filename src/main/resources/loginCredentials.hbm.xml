<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "lt.daujotas.pojo.LoginCredentialsPojo" table = "loginCredentials">

        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "generatedKey" column = "GeneratedKey" type = "string"/>
        <property name = "webBrowser" column = "webBrowser" type = "string"/>
        <property name = "webAddress" column = "webAddress" type = "string"/>
        <property name = "userName" column = "user_name" type = "string"/>

    </class>
</hibernate-mapping>